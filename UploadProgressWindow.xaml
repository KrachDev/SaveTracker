<Window x:Class="SaveTracker.UploadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upload Progress" 
        Background="#1E1E1E"
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#0E639C" CornerRadius="6" Margin="0,0,0,20">
            <StackPanel Margin="20,15">
                <TextBlock Text="Upload Centre"
                           Name="TitleText"
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           Margin="0,0,0,5"
                           TextAlignment="Center"/>
               
            </StackPanel>
        </Border>
        <!-- Game Info -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Foreground="White" Name="GameNameText" Text="Game: " FontWeight="SemiBold"/>
            <TextBlock Foreground="White" Name="ProviderText" Text="Provider: " FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Progress Bar -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Foreground="White" Name="ProgressText" Text="Initializing..." Margin="0,0,0,5"/>
            <ProgressBar Foreground="DodgerBlue" Name="MainProgressBar" Height="25" Minimum="0" Maximum="100" Value="0"/>
            <TextBlock Foreground="White" Name="ProgressDetails" Text="0 of 0 files processed" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0" 
                       FontSize="12"/>
        </StackPanel>

        <!-- Status Log -->
        <Border Grid.Row="3" BorderBrush="LightGray" Height="40" BorderThickness="1" Margin="0,0,0,15">
            <ScrollViewer Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" >
                <TextBlock Name="StatusLog" 
                          Text="" 
                          TextWrapping="Wrap" 
                          Margin="10"
                          FontFamily="Consolas"
                          FontSize="11"
                          Background="White"/>
            </ScrollViewer>
        </Border>

        <!-- Statistics -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock  Foreground="White" Text="Valid Files" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                <TextBlock Foreground="White" Name="ValidFilesCount" Text="0" HorizontalAlignment="Center" FontSize="16"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1">
                <TextBlock Foreground="White" Text="Uploaded" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                <TextBlock Name="UploadedCount" Text="0" HorizontalAlignment="Center" FontSize="16" Foreground="Green"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2">
                <TextBlock Foreground="White" Text="Blacklisted" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                <TextBlock Name="BlacklistedCount" Text="0" HorizontalAlignment="Center" FontSize="16" Foreground="Orange"/>
            </StackPanel>
            
            <StackPanel Grid.Column="3">
                <TextBlock Foreground="White" Text="Missing" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                <TextBlock Name="MissingCount" Text="0" HorizontalAlignment="Center" FontSize="16" Foreground="Red"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Name="CloseButton" 
                    Content="Close" 
                    Width="80" 
                    Height="30" 
                    IsEnabled="False"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
