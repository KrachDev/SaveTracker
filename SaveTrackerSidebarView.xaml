<UserControl x:Class="SaveTracker.SaveTrackerSidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <StackPanel Margin="10" Background="Transparent">
        <TextBlock Text="Save Tracker" FontWeight="Bold" Margin="5" FontSize="14"/>
        <Button Content="Upload Saves" Name="UploadButton" Margin="5" Height="30" Click="UploadSaves_Click"/>
        <Button Content="Download Saves" Name="DownloadButton" Margin="5" Height="30" Click="DownloadSaves_Click"/>
        <TextBlock Text="Status: Ready" Name="StatusText" Margin="5"/>
    </StackPanel>
</UserControl>